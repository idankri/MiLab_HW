<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1A1A"
    android:clipChildren="false"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/starks_button"
        android:layout_width="196dp"
        android:layout_height="241dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.508"
        app:srcCompat="@drawable/house_stark" />

    <ImageButton
        android:id="@+id/lanisters_button"
        android:layout_width="191dp"
        android:layout_height="258dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/starks_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/house_lannister" />

</androidx.constraintlayout.widget.ConstraintLayout>